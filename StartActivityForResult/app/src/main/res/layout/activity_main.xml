<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rodolfo.startactivityforresult.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="20"
        android:id="@+id/nameText"
        android:layout_weight="1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Email"
        android:ems="20"
        android:id="@+id/emailText"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <Button
            android:text="Enviar Tela 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sendScrOne"
            android:layout_weight="1"
            android:onClick="sendScrOne"/>

        <Button
            android:text="Enviar Tela 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sendScrTwo"
            android:layout_weight="1"
            android:onClick="sendScrTwo"/>

    </LinearLayout>
</LinearLayout>
